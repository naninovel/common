{
    "name": "@naninovel/common",
    "version": "1.0.23",
    "description": "Systems used by multiple consumers: runtime, editor, language server, etc.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": ["dist/*"],
    "jest": {
        "preset": "ts-jest",
        "testMatch": ["**/test/**/*.ts"],
        "coveragePathIgnorePatterns": ["backend/*"],
        "coverageReporters": ["text", "cobertura"]
    },
    "scripts": {
        "update": "ncu --interactive",
        "test": "jest --silent=true",
        "cover": "npm test -- --coverage",
        "build": "webpack --mode production && tsc --outDir ./dist --declaration --emitDeclarationOnly",
        "publish-npm": "npm publish --access public"
    },
    "devDependencies": {
        "backend": "file:./backend",
        "typescript": "^5.1.6",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "@types/jest": "^29.5.3",
        "@types/node": "^20.4.5",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "npm-check-updates": "^16.10.17"
    }
}
